<body>

    <div class="container-fluid loginWrap">
        <div class="row">
            <div class="col-sm-4 login">
                <div class="card p-3">
                    <div class="card-title">
                        <h2 class="text-center">Create User</h2>
                    </div>
                    <%- include('./partials/flash_messages') %>
                    <form action="/secure/register" method="post">
                        <div class="form-group">
                            <label for="username" class="form-label mb-2">Username</label>
                            <input type="username" class="form-control" id="username" name="username"
                                value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="username">
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-label mb-2">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label mb-2">Password</label>
                            <input type="password" class="form-control password" id="password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" name="password" placeholder="strong password">
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <a href="/d" class="btn btn-danger w-100 mt-2">Cancel</a>
                            </div>
                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-success-b w-100 mt-2">Register</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>









</body>

</html>